
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read their own profile, but can be created by anyone (during signup)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Tasks can be read by any authenticated user.
    // Tasks can only be created/updated/deleted by authenticated users.
    // Specific logic for who can update/delete is handled in the app's security rules.
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Messages subcollection can be read/written by authenticated users
    match /tasks/{taskId}/messages/{messageId} {
        allow read, write: if request.auth != null;
    }

    // Announcements can be read by authenticated users.
    // Writes are restricted to authenticated users (admin roles handled in app logic).
    match /announcements/{announcementId} {
        allow read, write: if request.auth != null;
    }
  }
}
