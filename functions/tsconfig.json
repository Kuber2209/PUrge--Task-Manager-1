{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "$lib/*": ["../../src/lib/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}